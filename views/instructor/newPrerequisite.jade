extends ../layout

block content
  h3 Create new course
  p.error #{message}
    style(type='text/css').
            .error {
                color: red;
            }
  form(action=(`/instructor/new_prerequisite?name=${user.username}`) method="POST")
    p Course ID for Main Course:
      input(type="text" name="course_id_m" placeholder="")
    p Course ID for Prerequisite Course:
      input(type="text" name="course_id_p" placeholder="")
    input(type="submit")
