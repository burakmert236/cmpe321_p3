extends ../layout

block content
    p.error #{message}
        style(type='text/css').
            .error {
                color: red;
            }

    if !students
        form(action=(`/instructor/students?name=${user.username}`) method="POST")
            p Course ID:
                input(type="text" name="course_id")
            input(type="submit" value="Submit") 
    else 
        p List of all students takes Course(#{course_id}): #{slot}
        table   
            thead
                tr
                    th Username
                    th Student ID
                    th Email
                    th Name
                    th Surname
            tbody
                each student in students
                    tr
                        td= student.username
                        td= student.student_id
                        td= student.email
                        td= student.name
                        td= student.surname